{
    "command": "/usr/bin/ceph-fuse -m {{ groups['mon'][0] }}:6789 /root/data -k /etc/ceph/ceph.client.admin.keyring -c /etc/ceph/ceph.conf",
    "config_files": [
        {
            "source": "{{ container_config_directory }}/ganesha.conf",
            "dest": "/etc/ganesha/ganesha.conf",
            "owner": "ceph",
            "perm": "0600"
        },
        {
            "source": "{{ container_config_directory }}/ceph.conf",
            "dest": "/etc/ceph/ceph.conf",
            "owner": "ceph",
            "perm": "0600"
        },
        {
            "source": "{{ container_config_directory }}/ceph.client.admin.keyring",
            "dest": "/etc/ceph/ceph.client.admin.keyring",
            "owner": "ceph",
            "perm": "0600",
            "optional": true
        }
    ]
}
